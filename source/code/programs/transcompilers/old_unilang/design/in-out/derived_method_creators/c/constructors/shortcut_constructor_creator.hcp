◀private: static▶ Method_Item ☀Get_Constructor(std::string file_name, std::vector<Method_Item> const& methods)❰

    for (auto it: methods){
        if (Shared_Printer::Is_Constructor_But_Not_Copy_Constructor(file_name,it)){
          return it;
        }
    }
    
    
    return Method_Item{};
