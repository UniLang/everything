◀private: static▶ X11_Window_Geometry ☀get_geometry(Display * display, Window w)❰
    X11_Window_Geometry geo;
    Window theTempRoot;
    XGetGeometry(display, w, &theTempRoot,
               &geo.x, &geo.y,
               &geo.width, &geo.height,
               &geo.border_width, &geo.depth);
  return geo;
