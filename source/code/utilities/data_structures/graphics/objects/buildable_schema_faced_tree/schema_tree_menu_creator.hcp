◀private: static▶ Select_Menu ☀Individual_Label_Menu(Button_Face_Tree const& structure, Child_Lookup_Map const& lookup, tree<Buttoned_Faced_Label>::pre_order_iterator it)❰

    Select_Menu x;
    x.name = "label menu";
    
    //customize
    bool add_tree_manipulation_options = true;
    bool add_sibiling_rename_options = false;
    bool add_children_append_options = true;
    
    if (add_tree_manipulation_options){
        Add_Tree_Manipulation_Options(x,structure,lookup,it);
    }
    
    if (add_sibiling_rename_options){
        Add_Sibling_Names_For_Renaming(x,structure,lookup,it);
    }
    
    if (add_children_append_options){
        Add_Children_Names_For_Appending(x,structure,lookup,it);
    }
    
    return x;
❱


◀private: static▶ void ☀Add_Tree_Manipulation_Options(Select_Menu & x, Button_Face_Tree const& structure, Child_Lookup_Map const& lookup, tree<Buttoned_Faced_Label>::pre_order_iterator it)❰

    //style
    auto face_label = Faced_Label_Premades::Highlightable_Single_Plain_White_Box();
    
    face_label.state.faces[0].label.message = ":delete";
    x.menu.nodes.insert(x.menu.nodes.end(),face_label);
    
    face_label.state.faces[0].label.message = ":duplicate";
    x.menu.nodes.insert(x.menu.nodes.end(),face_label);
