◀public: static▶ Multi_Color_Bitmap ☀Create(int width)❰
    Multi_Color_Bitmap b;
    
    Pixel_Settings p;
    
    p.color_fill.r = 0;
    p.color_fill.g = 0;
    p.color_fill.b = 0;
    
    for (size_t i = 0; i < width; ++i){
        p.pos.x = i;
        p.pos.y = 0;
        b.pixels.emplace_back(p);
    }
    
    return b;
